<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="risecommerce_abandoned_cart" resource="default" comment="Risecommerce Abandoned Cart">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Primary Key"/>
        <column xsi:type="int" name="quote_id" padding="10" unsigned="true" nullable="false" comment="Quote Id"/>
        <column xsi:type="smallint" name="store_id" padding="10" unsigned="true" nullable="false" comment="Store Id"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="true" comment="Customer Id"/>
        <column xsi:type="varchar" name="email" nullable="false" length="255" default="" comment="Email"/>
        <column xsi:type="timestamp" name="quote_updated_at" nullable="true" comment="Quote updated at"/>
        <column xsi:type="smallint" padding="10" name="abandoned_cart_number" nullable="false" unsigned="true" default="0" comment="Abandoned Cart number"/>
        <column xsi:type="smallint" padding="10" name="items_count" nullable="false" unsigned="true" default="0" comment="Quote items count"/>
        <column xsi:type="varchar" name="items_ids" nullable="false"  length="255" comment="Quote item ids"/>
        <column xsi:type="timestamp" name="created_at" nullable="true" comment="Created at"/>
        <column xsi:type="timestamp" name="updated_at" nullable="true" comment="Updated at"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <index referenceId="RISECOMMERCE_ABANDONED_CART_QUOTE_ID" indexType="btree">
            <column name="quote_id"/>
        </index>
        <index referenceId="RISECOMMERCE_ABANDONED_CART_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <index referenceId="RISECOMMERCE_ABANDONED_CART_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
        <index referenceId="RISECOMMERCE_ABANDONED_CART_EMAIL" indexType="btree">
            <column name="email"/>
        </index>
    </table>

    <table name="risecommerce_abandoned_cart_email_campaign" resource="default" comment="Risecommerce Abandoned Cart Email Campaign">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Primary Key"/>
        <column xsi:type="varchar" name="email" nullable="false" length="255" default="" comment="Contact Email"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="true" comment="Customer Id"/>
        <column xsi:type="int" name="quote_id" padding="10" unsigned="true" nullable="false" comment="Sales quote Id"/>
        <column xsi:type="varchar" name="message" nullable="false" default="" length="255" comment="Error message"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" comment="Store ID"/>

        <column xsi:type="timestamp" name="created_at" nullable="true" comment="Created at"/>
        <column xsi:type="timestamp" name="updated_at" nullable="true" comment="Updated at"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="RISECOMMERCE_ABANDONED_CART_EMAIL_CAMPAIGN_STORE_ID_STORE_STORE_ID" table="risecommerce_abandoned_cart_email_campaign" column="store_id" referenceTable="store" referenceColumn="store_id" onDelete="CASCADE"/>

        <index referenceId="RISECOMMERCE_ABANDONED_CART_EMAIL_CAMPAIGN_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <index referenceId="RISECOMMERCE_ABANDONED_CART_EMAIL_CAMPAIGN_EMAIL" indexType="btree">
            <column name="email"/>
        </index>
        <index referenceId="RISECOMMERCE_ABANDONED_CART_EMAIL_CAMPAIGN_CREATED_AT" indexType="btree">
            <column name="created_at"/>
        </index>
        <index referenceId="RISECOMMERCE_ABANDONED_CART_EMAIL_CAMPAIGN_UPDATED_AT" indexType="btree">
            <column name="updated_at"/>
        </index>
        <index referenceId="RISECOMMERCE_ABANDONED_CART_EMAIL_CAMPAIGN_QUOTE_ID" indexType="btree">
            <column name="quote_id"/>
        </index>
        <index referenceId="RISECOMMERCE_ABANDONED_CART_EMAIL_CAMPAIGN_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
    </table>
</schema>